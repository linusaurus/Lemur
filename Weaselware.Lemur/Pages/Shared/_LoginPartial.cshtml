@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right ">
        <ul class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-1">
            <li class="nav-item mr-2">
                <a asp-area="Identity" asp-page="/Account/Manage/Index"  class="text-light" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link text-light navbar-btn navbar-link" title="LogOut">logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-1">
        <li class="nav-item mr-2"><a asp-area="Identity" asp-page="/Account/Register" class="text-light  navbar-link">Register</a></li>
        <li class="nav-item mr-2"><a asp-area="Identity" asp-page="/Account/Login"  class=" text-light  navbar-link">Login</a></li>
    </ul>
}